<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/layRow"
    >

    <CheckBox
        android:id="@+id/check_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/name_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="sad fksdflksajfksadfa dsakf dsakfsa dskajflkasd f sa"
        android:layout_toRightOf="@+id/check_status"
        android:layout_toLeftOf="@+id/msg_date_txt"
        
        />

    <TextView
        android:id="@+id/msg_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imgArrow"
        android:layout_marginRight="10dp"
        android:text="" />
    
    
    <ImageButton android:id="@+id/imgArrow" 
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:background="@drawable/arrow48"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

</RelativeLayout>